<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="500dp"
    android:background="@drawable/background_new_other"
    tools:context=".InformationEditActivity" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_sl"

        android:layout_gravity="top"
        sl:scale_base_width="1000"
        sl:scale_base_height="1330" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_left="375"
            sl:scale_top="50"
            sl:scale_width="250"
            sl:scale_height="200"
            android:id="@+id/main_top"
            android:src="@drawable/main_top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="아이디 : "
            android:id="@+id/idTextView"
            android:textColor="@android:color/black"
            sl:scale_width = "700"
            sl:scale_height = "70"
            sl:scale_left = "150"
            sl:scale_top = "300"
            sl:scale_textsize="50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="이름 : "
            android:textColor="@android:color/black"

            android:id="@+id/nameTextView"
            sl:scale_width = "700"
            sl:scale_height = "70"
            sl:scale_left = "150"
            sl:scale_top = "400"
            sl:scale_textsize="50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="메일주소 : "
            android:textColor="@android:color/black"

            android:id="@+id/mailTextView"
            sl:scale_width = "700"
            sl:scale_height = "70"
            sl:scale_left = "150"
            sl:scale_top = "500"
            sl:scale_textsize="50"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="새로운 이메일"
            android:id="@+id/new_mail"
            sl:scale_width = "700"
            sl:scale_height = "100"
            sl:scale_left = "150"
            sl:scale_top = "600"
            sl:scale_textsize="40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="전화번호 : "
            android:textColor="@android:color/black"

            android:id="@+id/phonetextView"
            sl:scale_width = "700"
            sl:scale_height = "70"
            sl:scale_left = "150"
            sl:scale_top = "725"
            sl:scale_textsize="50"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="새로운 전화번호"
            android:id="@+id/new_phone"
            android:inputType="number"
            sl:scale_width = "700"
            sl:scale_height = "100"
            sl:scale_left = "150"
            sl:scale_top = "825"
            sl:scale_textsize="40"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="새로운 비밀번호"
            android:id="@+id/new_pass_word"
            android:inputType="textPassword"
            sl:scale_width = "700"
            sl:scale_height = "100"
            sl:scale_left = "150"
            sl:scale_top = "960"
            sl:scale_textsize="40"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="새로운 비밀번호 확인"
            android:textColorHint="#FF0000"
            android:id="@+id/new_pass_word_chk"
            android:inputType="textPassword"
            sl:scale_width = "700"
            sl:scale_height = "100"
            sl:scale_left = "150"
            sl:scale_top = "1090"
            sl:scale_textsize="40"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_acceptBtn"
            android:scaleType="centerInside"

            android:background="@android:color/transparent"
            sl:scale_left="70"
            sl:scale_width="400"
            sl:scale_height="130"
            sl:scale_top="1200"
            android:src="@drawable/accept_click"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_cancelBtn"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            sl:scale_left="550"
            sl:scale_width="400"
            sl:scale_height="130"
            sl:scale_top="1200"
            android:src="@drawable/cancel_click"/>



    </com.ssomai.android.scalablelayout.ScalableLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/main_bottom"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"/>



</RelativeLayout>