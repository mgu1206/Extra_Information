<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_new"
    tools:context="yu_cse.graduation_project_edit.activities.MapListActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/main_top"
        android:src="@drawable/main_top"/>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_sl"
        android:layout_below="@+id/main_top"

        android:layout_gravity="top"
        sl:scale_base_width="1000"
        sl:scale_base_height="1000" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_List_View"
            android:longClickable="true"
            android:background="#CCCCBBBB"
            android:textColor="@android:color/black"
            sl:scale_textsize="30"
            sl:scale_left="50"
            sl:scale_top="10"
            sl:scale_width="900"
            sl:scale_height="800"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목록의 지도를 클릭하면 확인이 가능합니다."
            sl:scale_width="600"
            sl:scale_left="200"
            sl:scale_top="850"
            sl:scale_textsize="30"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/main_bottom"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"/>


</RelativeLayout>
