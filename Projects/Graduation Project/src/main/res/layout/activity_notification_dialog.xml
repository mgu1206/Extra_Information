<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:sl="http://schemas.android.com/apk/res-auto"
android:layout_width="300dp"
android:layout_height="200dp"
android:background="@drawable/background_new_other"
tools:context="yu_cse.graduation_project_edit.dialog.NotificationDialog">

<com.ssomai.android.scalablelayout.ScalableLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_sl"

    android:layout_gravity="top"
    sl:scale_base_width="300"
    sl:scale_base_height="200" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:gravity="center"
        android:textColor="@android:color/black"

        sl:scale_textsize="20"
        android:textStyle="bold"
        sl:scale_height="40"
        sl:scale_width="300"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        sl:scale_top = "50"
        sl:scale_width="300"
        sl:scale_height="60"
        sl:scale_textsize="15"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closeBtn"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:src="@drawable/accept_click"

        sl:scale_top="130"
        sl:scale_left = "75"
        sl:scale_width="150"
        sl:scale_height="30"/>



</com.ssomai.android.scalablelayout.ScalableLayout>





</RelativeLayout>