<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_new_other"
    android:layout_width="325dp"
    android:layout_height="400dp"
    android:id="@+id/request_friend_layout"

    tools:context="yu_cse.graduation_project_edit.activities.RequestFriend">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        sl:scale_base_width="1000"
        sl:scale_base_height="1230"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_width="750"
            sl:scale_height="150"
            sl:scale_left="125"
            sl:scale_top="40"
            android:src="@drawable/request_fr"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            sl:scale_width="600"
            sl:scale_height="135"
            sl:scale_left="200"
            sl:scale_top="250"
            sl:scale_textsize="45"
            android:singleLine="true"
            android:textStyle="normal"
            android:id="@+id/inputTextBuddyId"
            android:layout_gravity="center_horizontal"
            android:hint="Input buddy's ID."
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/fr_find_click"
            sl:scale_left="310"
            sl:scale_top="420"
            sl:scale_height="85"
            sl:scale_width="380"
            android:id="@+id/findFrBtn"

            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            sl:scale_width="800"
            sl:scale_height="135"
            sl:scale_left="100"
            sl:scale_top="675"
            sl:scale_textsize="45"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:textStyle="normal"
            android:id="@+id/buddyNameText"
            android:layout_gravity="center_horizontal"
            android:hint="Your buddy is..."

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/fr_req_click"
            sl:scale_left="310"
            sl:scale_top="845"
            sl:scale_height="85"
            sl:scale_width="380"
            android:id="@+id/fr_req"

            android:layout_gravity="center_horizontal"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_bottom"
            sl:scale_left="375"
            sl:scale_top="1100"
            sl:scale_width="250"/>


</com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>
