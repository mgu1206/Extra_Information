<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@drawable/background_new"
    tools:context=".ShowMyFriend" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_sl"

        android:layout_gravity="top"
        sl:scale_base_width="1000"
        sl:scale_base_height="1330" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_left="375"
            sl:scale_top="50"
            sl:scale_width="250"
            sl:scale_height="200"
            android:id="@+id/main_top"
            android:src="@drawable/main_top"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fr_List_View"
            android:longClickable="true"
            android:background="#CCCCBBBB"
            android:textColor="@android:color/black"
            sl:scale_textsize="30"
            sl:scale_top="200"
            sl:scale_width="1000"
            sl:scale_height="800"
             />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/request_btn"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            sl:scale_left="300"
            sl:scale_top="1020"
            sl:scale_width="400"
            sl:scale_height="130"
            sl:scale_textsize = "40"
            android:src="@drawable/find_friend_click"/>


    </com.ssomai.android.scalablelayout.ScalableLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/main_bottom"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"/>



</RelativeLayout>