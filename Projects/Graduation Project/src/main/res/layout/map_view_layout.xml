<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="325dp"

    tools:context="yu_cse.graduation_project_edit.dialog.MapViewDialog">
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_sl"
        android:layout_centerInParent="true"
        android:background="@drawable/background_new_other"

        android:layout_gravity="top"
        sl:scale_base_width="325"
        sl:scale_base_height="325" >


        <com.jiahuan.svgmapview.SVGMapView
            android:id="@+id/map_view"
            android:layout_below="@+id/main_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"

            sl:scale_width="325"
            sl:scale_height="325"


            >
        </com.jiahuan.svgmapview.SVGMapView>




    </com.ssomai.android.scalablelayout.ScalableLayout>


</RelativeLayout>
